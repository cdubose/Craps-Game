let greeting = "Welcome to Craps!"

let instructions = "These will be the instructions for how to play craps."

let dice1 =
  let a = 1 and b = 6 in
    Random.int (b - a + 1) + a

let dice2 =
  let a = 1 and b = 6 in
    Random.int (b - a + 1) + a

let dice_total = dice1 + dice2

let dice_value = (dice1, dice2)


let read_input = function
  |  "roll" | "ROLL" | "Roll" -> print_string "function which rolls the dice and then displays each dice value and the total"
  | "help" | "HELP" | "Help" -> print_string instructions
  | _ -> raise (Invalid_argument "Command does not exist. Type ROLL to roll or HELP to see instructions.");;
  
  
